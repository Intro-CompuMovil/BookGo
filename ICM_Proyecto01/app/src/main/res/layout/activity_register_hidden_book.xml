<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Botón atrás -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Volver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Libro Oculto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnBack" />

    <!-- Imagen del libro -->
    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_book"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Título del libro"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/bookImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/etBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="—"
        android:textSize="13sp"
        android:paddingVertical="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/labelTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- AUTOR -->
    <TextView
        android:id="@+id/labelAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Autor"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/etBookTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/etBookAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="—"
        android:textSize="13sp"
        android:paddingVertical="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/labelAuthor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GÉNERO -->
    <TextView
        android:id="@+id/labelGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Género"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/etBookAuthor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/etBookGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="—"
        android:textSize="13sp"
        android:paddingVertical="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/labelGenre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ESTADO -->
    <TextView
        android:id="@+id/labelState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado del libro"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/etBookGenre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/etBookState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="—"
        android:textSize="13sp"
        android:paddingVertical="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/labelState"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- UBICACIÓN DEL LIBRO (editable) -->
    <TextView
        android:id="@+id/labelLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instrucciones de búsqueda"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etBookState"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etBookLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej. Estante inferior a la derecha"
        android:padding="10dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/labelLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mapa -->
    <RelativeLayout
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etBookLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <org.osmdroid.views.MapView
            android:id="@+id/osmMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/searchAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar dirección..."
            android:imeOptions="actionSend"
            android:inputType="text"
            android:layout_margin="16dp"
            android:padding="12dp"
            android:textSize="13sp"
            android:background="@drawable/round_corners"
            android:elevation="6dp" />
    </RelativeLayout>

    <!-- Botón de acción -->
    <Button
        android:id="@+id/btnRegisterBook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Libro Oculto"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/mapContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
