<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Botón atrás -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Volver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Libro Oculto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnBack" />

    <!-- Card con info del libro -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBookInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen del libro -->
            <ImageView
                android:id="@+id/bookImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_book" />

            <!-- Info título -->
            <TextView
                android:id="@+id/etBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título: —"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />


            <!-- Autor -->
            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/etBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BookInfoLabel"
                android:text="Autor: —" />

            <!-- Género -->
            <TextView
                android:id="@+id/etBookGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BookInfoLabel"
                android:text="Género: —" />

            <!-- Estado -->
            <TextView
                android:id="@+id/etBookState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BookInfoLabel"
                android:text="Estado: —" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Label instrucciones -->
    <TextView

        android:id="@+id/labelLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instrucciones de búsqueda"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardBookInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo editable -->
    <EditText
        android:id="@+id/etBookLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej. Estante inferior a la derecha"
        android:padding="12dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/labelLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mapa -->
    <RelativeLayout
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/etBookLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <org.osmdroid.views.MapView
            android:id="@+id/osmMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/searchAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar dirección..."
            android:inputType="text"
            android:imeOptions="actionSend"
            android:layout_margin="16dp"
            android:padding="12dp"
            android:textSize="13sp"
            android:background="@drawable/round_corners"
            android:elevation="6dp" />
    </RelativeLayout>

    <!-- Botón acción -->
    <Button
        android:id="@+id/btnRegisterBook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Libro Oculto"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/mapContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
