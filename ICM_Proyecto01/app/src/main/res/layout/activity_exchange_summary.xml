<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Botón de retroceso -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen del Intercambio"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Sección libro en punto de intercambio -->
        <TextView
            android:id="@+id/tvSeccionLibroPunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libro Disponible en el Punto"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/bookImageExchange"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:src="@drawable/default_book"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvBookExchangeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBookExchangeState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado" />

                <TextView
                    android:id="@+id/tvExchangeLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección" />

                <TextView
                    android:id="@+id/tvExchangeDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha y hora" />
            </LinearLayout>
        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp"/>

        <!-- Sección libro ofrecido -->
        <TextView
            android:id="@+id/tvSeccionLibroUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu Libro Ofrecido"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/bookImageUser"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:src="@drawable/default_book"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvBookUserTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBookUserAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autor" />

                <TextView
                    android:id="@+id/tvBookUserGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Género" />

                <TextView
                    android:id="@+id/tvBookUserState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botón confirmar -->
        <Button
            android:id="@+id/btnConfirmExchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Intercambio"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
