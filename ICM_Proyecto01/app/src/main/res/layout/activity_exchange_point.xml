<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExchangePointActivity">

    <!-- Botón regresar -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Volver"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Mapa -->
    <org.osmdroid.views.MapView
        android:id="@+id/osmMap"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Card general -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/osmMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ic_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_exchange_point"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/tvPuntoDireccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ubicación"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/green"
                android:layout_marginStart="14dp"
                app:layout_constraintTop_toTopOf="@id/ic_location"
                app:layout_constraintStart_toEndOf="@id/ic_location"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imgLibroSeleccionado"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginTop="18dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPuntoDireccion" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@id/imgLibroSeleccionado"
                app:layout_constraintStart_toEndOf="@id/imgLibroSeleccionado"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvLibroSeleccionado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título:"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvEstadoSeleccionado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Estado:"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Subtítulo detalles -->
            <TextView
                android:id="@+id/subtituloDetalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Detalles del intercambio"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgLibroSeleccionado" />

            <!-- Icono calendario -->
            <ImageView
                android:id="@+id/ic_calendar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_search"
                app:layout_constraintTop_toBottomOf="@id/subtituloDetalles"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Contenedor Fecha y Hora -->
            <LinearLayout
                android:id="@+id/contenedorFechaHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="34dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ic_calendar"
                app:layout_constraintTop_toTopOf="@+id/subtituloDetalles">

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Línea divisoria -->
            <View
                android:id="@+id/viewDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/contenedorFechaHora"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp" />

            <!-- Botones -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/viewDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIntercambiar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Me interesa"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="16dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/red"
                    app:cornerRadius="16dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
