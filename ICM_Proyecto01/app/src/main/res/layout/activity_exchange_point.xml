<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExchangePointActivity">

    <!-- Botón regresar -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Volver"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Mapa OSM -->
    <org.osmdroid.views.MapView
        android:id="@+id/osmMap"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Card Información de intercambio -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bookCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/osmMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Icono ubicación -->
            <ImageView
                android:id="@+id/ic_location"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Texto dirección -->
            <TextView
                android:id="@+id/tvPuntoDireccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cra. 7 #40 - 62, Bogotá"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ic_location"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Distancia -->
            <TextView
                android:id="@+id/tvDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.7 km"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvPuntoDireccion"
                app:layout_constraintStart_toStartOf="@id/tvPuntoDireccion"
                android:layout_marginTop="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card Libro disponible -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLibroSeleccionado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/bookCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Imagen portada -->
            <ImageView
                android:id="@+id/imgLibroSeleccionado"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_book"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Título libro -->
            <TextView
                android:id="@+id/tvLibroSeleccionado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Título del libro"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/imgLibroSeleccionado"
                app:layout_constraintTop_toTopOf="@id/imgLibroSeleccionado"
                android:layout_marginStart="16dp"/>

            <!-- Estado libro -->
            <TextView
                android:id="@+id/tvEstadoSeleccionado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Estado: Como Nuevo"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tvLibroSeleccionado"
                app:layout_constraintTop_toBottomOf="@id/tvLibroSeleccionado"
                android:layout_marginTop="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card detalles fecha y hora -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetallesIntercambio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardLibroSeleccionado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Icono calendario -->
            <ImageView
                android:id="@+id/ic_calendar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Texto fecha y hora -->
            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fecha: 28/04/2025 - Hora: 20:10"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/ic_calendar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botones -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardDetallesIntercambio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnIntercambiar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Ofrecer Libro"
            android:background="@drawable/btn_green"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Cancelar"
            android:background="@drawable/btn_red"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
